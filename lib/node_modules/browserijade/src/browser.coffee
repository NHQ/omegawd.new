path = require 'path'

window.jade = require './runtime'

# Render a pre-compiled Jade template in a self-executing closure.
renderString = (template)->
	eval template

renderFile = (filename, locals, callback)->
	filename = path.normalize filename
	filename += '.jade'
	locals ?= {}
	template = require filename
	callback template(locals)

module.exports = {
	renderString
	renderFile
}